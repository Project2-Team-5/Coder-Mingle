
<h1>Select an Image to Either Delete it, or add it as a Profile Picture.</h1>




<div>
{{#each img}}

    <a href="/userimages/{{id}}">
        <img src="{{url}}" alt="User Image {{id}}">
    </a>

{{/each}}
</div>

{{#if isSelf}}
<button id="upload_widget" class="cloudinary-button">Upload Picture</button>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>

<script type="text/javascript">
    var myWidget = cloudinary.createUploadWidget({
        cloudName: 'coder-mingle',
        uploadPreset: 'n3h6qtn0'}, (error, result) => { 
            if (!error && result && result.event === "success") { 
                console.log(result.info.secure_url);
                const userObj = {
                    url:result.info.secure_url,
                }
                fetch("/api/images",{
                    method: "POST",
                    body:JSON.stringify(userObj),
                    headers: {
                        "Content-Type":"application/json"
                    }
                }).then(res=>{
                    if(res.ok){
                        console.log("worked!")
                    }
                    else {
                        alert("An Error Occured")
                    }
                })
            }
        })
    document.getElementById("upload_widget").addEventListener("click", function(){
        myWidget.open();
    }, false);
</script>
{{/if}}