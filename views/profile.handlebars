<profile class="profile">


    <div class="profPage">

        <div class="profCardContainer">
            <p1 id="prof-name">{{user.first_name}} {{user.last_name}} </p1>

            <div class="box">
                <img src="{{user.survey.profile_pic}}" alr="personal photo:">
            </div>



            <br>
            <h3>Bio: </h3>
            <p1>{{user.survey.bio}}</p1>

            <h3>Email: </h3>
            <p1> {{user.email}}</p1>

            <h3>Gender:</h3>
            <p1> {{user.survey.gender}} </p1>

            {{#if isSelf}}
            <h3>Birthday:</h3>
            <p1> {{user.survey.birthdate}} </p1>
            {{/if}}

            <h3>Preferred gender: </h3>
            <p1>{{user.survey.pref_gender}} </p1>

            <h3>Ideal relationship: </h3>
            <p1>{{user.survey.relationship}}</p1>

            <h3>Reason for joining: </h3>
            <p1>{{user.survey.goal}}</p1>

            <h3>Working style: </h3>
            <p1>{{user.survey.worker}}</p1>

            <h3>Preferred language: </h3>
            <p1>{{user.survey.language}}</p1>

            <h3>Programmer Type:</h3>
            <p1>{{user.survey.programmer_type}}</p1>

            <h3 class=>Ideal date night: </h3>
            <p1 class="pb-4">{{user.survey.ideal_date}}</p1>
            </test>

        </div>
        {{#if isSelf}}
        <a class="edit-btn" href="/profile/edit">Edit</a>
        {{else}}
        {{!-- add comment section here --}}
        {{/if}}

        {{#if selectedUserId}}
        <a class="edit-btn" href="/userimages?id={{selectedUserId}}">View Images</a>
        {{else}}
        <a class="edit-btn" href="/userimages">View Images</a>
        {{/if}}



        {{!-- #unless: only show comment form when viewing other profiles --}}
        {{#unless isSelf}}
        <h3>Do you want to remove this match?</h3>
        <button id="deleteBtn" data-index="{{user.id}}">Yes</button>
        <form id="post-form">
            <div class="form-group">
                <label for="post">Leave a comment for {{user.first_name}} {{user.last_name}}</label>
                <textarea class="form-control" id="post" rows="3"></textarea>
                <input type="hidden" id="userId" name="userId" value={{selectedUserId}}>
                <button type="submit" class="btn btn-primary mb-2">Comment</button>
            </div>
        </form>
        {{/unless}}
        </main>
    </div>
</profile>

{{#each user.Posts}}
{{comment}}
<br />
{{dateFormatterHelper createdAt}}
<br />
{{author.first_name}} {{author.last_name}}
<br />
{{/each}}

<script src="/js/post.js"></script>
<script src="/js/appmatch.js"></script>